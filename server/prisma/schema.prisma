generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int     @id @default(autoincrement())
  role            Role    @default(USER)
  email           String  @unique
  createdDate     String
  fullName        String
  password        String
  passwordConfirm String?
  @@map("users")
}

model Game {
  id              Int     @id @default(autoincrement())
  name String
  releaseYear String
  rating String 
  description String 
  writers String[]
  stars String []
  consoles String[]
  genre String[]
  price Int
  gameplayHours Int
  trailer String
  thumbnail String
}

enum Role {
  USER
  ADMIN
  GUEST
}