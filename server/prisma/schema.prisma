generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int      @id @default(autoincrement())
  role            Role     @default(USER)
  email           String   @unique
  fullName        String
  password        String
  passwordConfirm String?
  createdDate     DateTime @default(now())
  active          Boolean  @default(true)
  image           String   @default("https://social-network-js.vercel.app/img/profile5.png")
  reviews         Review[]

  @@map("users")
}

model Game {
  id            Int           @id @default(autoincrement())
  description   String
  writers       String[]
  price         String
  gameplayHours String
  trailer       String
  thumbnail     String
  name          String
  stars         String[]
  releaseYear   String
  photos        String[]
  rating        Int           @default(0)
  consoles      GameConsole[]
  genres        GameGenre[]
  reviews       Review[]
}

model Review {
  id        Int      @id @default(autoincrement())
  userId    Int
  gameId    Int
  rating    Int
  createdAt DateTime @default(now())
  content   String
  game      Game     @relation(fields: [gameId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, gameId])
}

model Console {
  id    Int           @id @default(autoincrement())
  name  String        @unique
  image String
  games GameConsole[]
}

model GameConsole {
  gameId    Int
  consoleId Int
  console   Console @relation(fields: [consoleId], references: [id])
  game      Game    @relation(fields: [gameId], references: [id], onDelete: Cascade)

  @@id([gameId, consoleId])
}

model Genre {
  id    Int         @id @default(autoincrement())
  name  String      @unique
  games GameGenre[]
}

model GameGenre {
  gameId  Int
  genreId Int
  game    Game  @relation(fields: [gameId], references: [id], onDelete: Cascade)
  genre   Genre @relation(fields: [genreId], references: [id])

  @@id([gameId, genreId])
}

enum Role {
  USER
  ADMIN
  GUEST
}
